<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/insertData" method="post" enctype="multipart/form-data">
        <table border="" align="center">
            <caption>
                <h2>Edit User Data</h2>
            </caption>
            <tr>
                <td>File</td>
                <td>
                    <input type="file" name="image" id="">
                    <img src="../<%= data.image %>" alt="image" width="100px">
                </td>
            </tr>
            <tr>
                <td>Title</td>
                <td>
                    <input type="text" name="title" id="" value="<%= data.title %>" >
                    <input type="hidden" name="editId" id="" value="<%= data.id %>">
                    
                </td>
            </tr>
            <tr>
                <td>Price</td>
                <td><input type="text" name="price" id="" value="<%= data.price %>"></td>
            </tr>
            <tr>
                <td>Author</td>
                <td><input type="text" name="author" id="" value="<%= data.author %>"></td>
            </tr>
            <tr>
                <td>City</td>
                <td>
                    <select name="city" id="">
                        <option value="" disabled selected>--select-city--</option>
                        <%
                            let City = ["Surat","Ahemdabad","Mumbai"];
                            City.map((val,idx)=>{
                        %>
                                <option 
                                    value="<%= val %>"
                                    <% if(data.city == val){ %> selected <% } %>  
                                >
                                <%= val %>
                                </option>
                        <%
                            })
                        %>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Pages</td>
                <td>
                    <input type="radio" name="pages" value="0-50" <% if(data.pages == '0-50') { %>checked<% } %>  id=""  >0-50
                    <input type="radio" name="pages" value="50-100" <% if(data.pages == '50-100') { %>checked<% } %>  id=""  >50-100
                    <input type="radio" name="pages" value="100-150" <% if(data.pages == '100-150') { %>checked<% } %>  id=""  >100-150
                    <input type="radio" name="pages" value="150-200" <% if(data.pages == '150-200') { %>checked<% } %>  id=""  >150-200
                </td>
            </tr>
            <tr>
                <td>Discription</td>
                <td>
                    <textarea name="discription" id=""> <%= data.discription %> </textarea>
                </td>
            </tr>
            <tr>
                <td>Language</td>
                <td>
                    <input type="checkbox" name="language" value="hindi" <% if(data.hobby.includes('hindi')) {%> checked <% }%> id="">
                    <input type="checkbox" name="language" value="gujarati" <% if(data.hobby.includes('gujarati')) {%> checked <% }%> id="">
                    <input type="checkbox" name="language" value="english" <% if(data.hobby.includes('english')) {%> checked <% }%> id="">
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Add Data" class="btn btn-success" ></td>
            </tr>
        </table>
    </form>
</body>
</html>